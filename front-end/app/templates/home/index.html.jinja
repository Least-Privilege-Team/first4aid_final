{% extends "base.html.jinja" %}
{% block maincontent %}
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <div class="shadow p-3 mb-5 bg-body rounded my-5">
            <img src="{{ url_for('static', filename='First4Aid.png') }}" class="img-fluid mx-auto d-block" alt="First4Aid logo">
            <p class="mt-1 text-center">This platform is secured through end-to-end encryption, and data is encrypted at rest.</p>
            <ul>
                <li>If you have never used this platform before, click the 'request support' button.</li>
                <li>If you are a returning user, click the 'request support' button.</li>
            </ul>
            <div class="d-grid gap-2 col-6 mx-auto my-5">
                <a role="button" class="btn btn-primary btn-lg" href="{{ url_for('user.request_support') }}">REQUEST SUPPORT</a>
                <a role="button" class="btn btn-outline-secondary btn-lg" href="{{ url_for('user.track_request') }}">TRACK REQUEST</a>
            </div>
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>
{% endblock %}